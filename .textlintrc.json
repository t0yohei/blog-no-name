{
  "plugins": {},
  "filters": {},
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 130
      },
      "no-exclamation-question-mark": false,
      "no-double-negative-ja": false,
      "ja-no-mixed-period": {
        "allowPeriodMarks": ["。", "、"]
      }
    },
    "spellcheck-tech-word": true
  }
}
